<!---- -*- mode: html -*-  --->

<% include header %>
<% include nav %>

<div class="container task-view-page">
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header">Task view: <%= task_view.topic %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 task-view-left">
      <p class="note">
	Last updated on <%= task_view.version %>
	by <%= task_view.maintainer %>
      </p>
      <p><%- task_view.info %></p>
      <h2 class="page-header">Links</h2>
      <p>
	<ul>
	  <% for (l in task_view.links) { %>
	    <% var link = task_view.links[l]; %>
	    <li><%- link %>
	  <% } %>
	</ul>
      </p>
    </div>
    <div class="col-md-6">
      <h2 class="text-center">Packages</h2>
      <p>
	<%- include('pkglist_result', { 'pkgs': pkgs,
	    'npr': 3,
	    'cw': 'col-sm-4' }); %>
      </p>
    </div>
  </div>

  <hr>
  <p><a class="btn btn-default" href="/ctv" role="button">
      <span class="glyphicon glyphicon-backward" aria-hidden="true"></span>
      Task view list
  </a></p>

</div>
  
<% include links %>
<% include footer %>
