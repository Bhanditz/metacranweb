<div class="container hidden-xs">
  <div class="row index-numbers">
    <div class="col-sm-3 col-md-2 col-md-offset-2">
      <h3 class="index-number">
	<span class="glyphicon glyphicon-gift" aria-hidden="true"></span>
	<span><a href="/pkglist" title ="Browse packages">
	    <%= numactive %> <br><small>active packages</small>
        </a></span></h3>
    </div>
    <div class="col-sm-3 col-md-2">
      <h3 class="index-number">
	<span class="glyphicon glyphicon-user" aria-hidden="true"></span>
	<%= nummaint %> <br><small>package maintainers</small></h3>
    </div>
    <div class="col-sm-3 col-md-2">
      <h3 class="index-number">
	<a href="/recent" title="Recently updated packages">
	  <span class="glyphicon glyphicon-upload" aria-hidden="true"></span>
	  <%= numupdates %> <br><small>updates last week</small></h3>
        </a>
    </div>
    <div class="col-sm-3 col-md-2">
      <h3 class="index-number">
	<a href="/downloaded" title="Most downloaded packages">
	  <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
	  <%= numdownloads %> <br><small>downloads last week</small></h3>
        </a>
    </div>
  </div>
</div>
